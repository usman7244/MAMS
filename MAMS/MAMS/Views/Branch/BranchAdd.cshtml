@model MAMS_Models.Model.Branch
@{
    var status = ViewBag.BranchAddStatus;
    var Companies =new  List<MAMS_Models.Model.Company>();
    Companies=ViewBag.Companies;
    IEnumerable<SelectListItem> CompaniesList;

    @if (Companies?.Count > 0)
    {
        CompaniesList = Companies.Select(x => new SelectListItem() { Text = x.Name, Value = x.UID.ToString() });
    }
    else
    {
        CompaniesList = Enumerable.Empty<SelectListItem>();
    }
}

@{
    ViewData["Title"] = "Add Branch";
}


<script src="~/js/jquery-191-min.js"></script>


<div class="card">
    <div class="card-header card-header-primary">
        <h5 class="card-title"><i class="fa fa-pencil-square-o"></i> Branch Add</h5>
    </div>
    <div class="card-body">
        <form id="BranchForm" enctype="multipart/form-data" action="/Branch/BranchAdd" method="post">

            <div class="row">


                <div class="col-md-4">
                    <div class="form-group">
                        @*<label class="bmd-label-floating"> Customer Name</label>*@ 

                        <select class="form-select form-control" required id="slctCompany" asp-items="@CompaniesList" asp-for="@Model.CompanyUID">
                            <option value="">Select Company</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4 col-sm-4">
                    <div class="form-group">
                        <label class="control-label bold">Name</label>
                        <input type="text" asp-for="Name" class="form-control form-control-inline" required>
                    </div>
                </div>


                <div class="col-md-4  col-sm-4">
                    <div class="form-group" required>

                        <label class="control-label bold">Status</label>
                        <div>
                            <input type="checkbox" asp-for="Status" class="form-control form-control-inline" checked>
                        </div>

                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label>Complete Address</label>
                        <div class="form-group">
                            <textarea class="form-control" required asp-for="Address" rows="5" id="Detail"></textarea>
                        </div>
                    </div>
                </div>

            </div>
            <div class="row float-right">
                <div class="form-group">
                    <a type="button" class="btn btn-success btn-round float-right" asp-controller="Branch" asp-action="Index">
                        <i class="fa fa-arrow-left"></i> Back
                    </a>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-round btn-success">
                        <i class="fa fa-plus-circle"></i> Add
                    </button>
                    <div class="clearfix"></div>
                </div>

            </div>
        </form>

    </div>
</div>


<!-- #region  alert -->
<div id="alertSuccess" data-notify="container" class="col-11 col-md-4 alert alert-success alert-with-icon animated fadeInDown" role="alert" data-notify-position="top-center" style="display: inline-block; margin: 15px auto; position: fixed; transition: all 0.5s ease-in-out 0s; z-index: 1031; top: 20px; left: 0px; right: 0px;">
    <button type="button" aria-hidden="true" class="close" data-notify="dismiss" style="position: absolute; right: 10px; top: 50%; margin-top: -9px; z-index: 1033;">
        <i class="material-icons">close</i>
    </button><i data-notify="icon" class="material-icons">add_alert</i><span data-notify="title"></span> <span data-notify="message"><b>Branch</b> <br>Branch added successfuly!</span>
    <a href="Deposit/Index" target="_blank" data-notify="url"></a>
</div>
<div id="alertDanger" data-notify="container" class="col-11 col-md-4 alert alert-danger alert-with-icon animated fadeInDown" role="alert" data-notify-position="top-center" style="display: inline-block; margin: 15px auto; position: fixed; transition: all 0.5s ease-in-out 0s; z-index: 1031; top: 20px; left: 0px; right: 0px;">
    <button type="button" aria-hidden="true" class="close" data-notify="dismiss" style="position: absolute; right: 10px; top: 50%; margin-top: -9px; z-index: 1033;">
        <i class="material-icons">close</i>
    </button><i data-notify="icon" class="material-icons">add_alert</i><span data-notify="title"></span> <span data-notify="message"><b>Branch</b> <br>Branch added not successfuly!</span>
    <a href="#" target="_blank" data-notify="url"></a>
</div>
<!-- #endregion -->
