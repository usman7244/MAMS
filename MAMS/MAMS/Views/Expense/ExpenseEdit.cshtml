@model MAMS_Models.Model.Expense

@{
    ViewData["Title"] = "Expense";
}
<script src="~/js/jquery-191-min.js"></script>
  <form id="BasicForm" enctype="multipart/form-data" action="/Expense/ExpenseAdd" method="post">
    <!-- #region Expense form -->
    <div class="card">
        <div class="card-header card-header-primary">
            <h5 class="card-title"><i class="far fa-newspaper"></i> Edit Expense</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4" style="display:none">
                    <div class="form-group">
                        <label class="bmd-label-floating"> UID</label>
                        <input type="number" class="form-control" min="0" id="idUID" value="@Model.UID">
                    </div>
                </div>

                <div class="col-sm-3 col-md-3">
                    <div class="form-group">
                        <label class="bmd-label-floating">Expense Details</label>
                        <input type="text" class="form-control" id="expDes" asp-for="@Model.ExpDescription">
                    </div>
                </div>
                <div class="col-sm-3 col-md-3">
                    <div class="form-group">
                        <label class="bmd-label-floating">Amount</label>
                        <input type="number" class="form-control" id="amount" min="0" asp-for="@Model.Amount">
                    </div>
                </div>
                
                <div class="col-sm-2 col-md-2">
                    <div class="form-group">
                        <!-- Back button -->
                        <a href="@Url.Action("Index", "Expense")" id="btnBack" class="btn btn-primary">Back</a>
                        <a class="btn btn-primary" id="btnAdd">
                            Update
                        </a>
                    </div>
                </div>
               
                   

            </div>

            
    <!-- #endregion -->
   
</form>
<!-- #region alert -->
<div id="alertSuccess" data-notify="container" class="col-11 col-md-4 alert alert-success alert-with-icon animated fadeInDown" role="alert" data-notify-position="top-center" style="display: inline-block; margin: 15px auto; position: fixed; transition: all 0.5s ease-in-out 0s; z-index: 1031; top: 20px; left: 0px; right: 0px;">
    <button type="button" aria-hidden="true" class="close" data-notify="dismiss" style="position: absolute; right: 10px; top: 50%; margin-top: -9px; z-index: 1033;">
        <i class="material-icons">close</i>
    </button><i data-notify="icon" class="material-icons">add_alert</i><span data-notify="title"></span> <span data-notify="message"><b>Expense</b> <br>Expense Edit successfully!</span>
    <a href="#" target="_blank" data-notify="url"></a>
</div>
<div id="alertDanger" data-notify="container" class="col-11 col-md-4 alert alert-danger alert-with-icon animated fadeInDown" role="alert" data-notify-position="top-center" style="display: inline-block; margin: 15px auto; position: fixed; transition: all 0.5s ease-in-out 0s; z-index: 1031; top: 20px; left: 0px; right: 0px;">
    <button type="button" aria-hidden="true" class="close" data-notify="dismiss" style="position: absolute; right: 10px; top: 50%; margin-top: -9px; z-index: 1033;">
        <i class="material-icons">close</i>
    </button><i data-notify="icon" class="material-icons">add_alert</i><span data-notify="title"></span> <span data-notify="message"><b>Crop</b> <br>Expense Edit not successfully!</span>
    <a href="#" target="_blank" data-notify="url"></a>
</div>
<!-- #endregion -->
<!-- #region Loader -->
<div class="overlay">
    <div id="loading-img"></div>
</div>
<!-- #endregion -->
<!-- #region Javascript -->
@section Scripts {
    <script src="~/js/sweetalert2.js"></script>
    <script src="~/js/bootstrap-notify.js"></script>
}
<script type="text/javascript">
    $("#alertSuccess").hide();
    $("#alertDanger").hide();
   


    debugger;
    $(document).ready(function () {
        $("#btnAdd").click(function (event) {
            event.preventDefault();
            debugger;
            // Get the values from the input fields
            var expDes = $("#expDes").val();
            var amount = $("#amount").val();
            var UID = $("#idUID").val();
            var DiffPrice = '@Model.DiffCash';
            var Type = '@Model.Type';
            // Construct the model object
            var model = {
                ExpDescription: expDes,
                Amount: amount,
                UID: UID,
                DiffCash: DiffPrice,
                Type: Type
            };
            debugger;

            $.ajax({
                type: 'POST',
                url: '/Expense/ExpenseEdit',
                data: {
                    'model': model
                },
               
                success: function (data) {
                    debugger;
                    console.log(data);

                    $('#alertSuccess').show();
                    setTimeout(function () {
                        window.location.href = '/Expense/Index';
                    }, 2000);
                },
                error: function (xhr, status, error) {

                    console.log(xhr.responseText);
                    $("#alertDanger").show();
                }
            });
        });
    });



</script>
